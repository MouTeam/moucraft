{
  "branches": [
    "main",
    { "name": "beta", "prerelease": true }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalCommits",
        "releaseRules": [
          { "type": "breaking", "release": "major" },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "type": "chore", "release": false },
          { "type": "doc", "release": false },
          { "type": "docs", "release": false },
          { "type": "feat", "release": "minor" },
          { "type": "feature", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": false },
          { "type": "style", "release": "patch" },
          { "type": "test", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalCommits",
        "presetConfig": {
          "types": [
            { "type": "breaking", "section": "ğŸ’¥ BREAKING CHANGES", "hidden": false },
            { "type": "build", "section": "âš™ï¸ Build System", "hidden": false },
            { "type": "chore", "section": "ğŸ”§ Chores", "hidden": false },
            { "type": "ci", "section": "ğŸ‘· Continuous Integration", "hidden": false },
            { "type": "doc", "section": "ğŸ“š Documentation", "hidden": false },
            { "type": "docs", "section": "ğŸ“š Documentation", "hidden": false },
            { "type": "feat", "section": "âœ¨ Features", "hidden": false },
            { "type": "feature", "section": "âœ¨ Features", "hidden": false },
            { "type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false },
            { "type": "perf", "section": "âš¡ï¸ Performance Improvements", "hidden": false },
            { "type": "refactor", "section": "ğŸ”¨ Code Refactoring", "hidden": false },
            { "type": "revert", "section": "âªï¸ Reverts", "hidden": false },
            { "type": "style", "section": "ğŸ¨ Styles", "hidden": false },
            { "type": "test", "section": "âœ… Tests", "hidden": false }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "build/curseforge/MouCraft-curseforge-server.zip", "name": "MouCraft-curseforge-server-${nextRelease.version}.zip" },
          { "path": "build/curseforge/MouCraft-curseforge-client.zip", "name": "MouCraft-curseforge-client-${nextRelease.version}.zip" },
          { "path": "build/modrinth/MouCraft-modrinth.mrpack", "name": "MouCraft-modrinth-${nextRelease.version}.mrpack" }
        ]
      }
    ]
  ]
}
